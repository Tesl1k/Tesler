<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anc" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #16212b 60%, #4e54c8 40%)" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">


    <VBox fx:id="vBox" alignment="CENTER" layoutX="71.0" layoutY="79.0" prefHeight="370.0" prefWidth="225.0" styleClass="vbox">
        <children>
            <Button mnemonicParsing="false" onAction="#testPassing" prefHeight="50.0" prefWidth="150.0" styleClass="button" text="Меню тестов">
                <VBox.margin>
                    <Insets bottom="12.0" top="12.0" />
                </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#testCreate" prefHeight="50.0" prefWidth="150.0" text="Создать тест">
                <VBox.margin>
                    <Insets bottom="12.0" top="12.0" />
                </VBox.margin></Button>
         <Button mnemonicParsing="false" onAction="#settings" prefHeight="50.0" prefWidth="150.0" text="Настройки">
            <VBox.margin>
               <Insets bottom="12.0" top="12.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#quit" prefHeight="50.0" prefWidth="150.0" text="На рабочий стол" wrapText="true">
            <VBox.margin>
               <Insets bottom="12.0" top="12.0" />
            </VBox.margin>
         </Button>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>

    <MenuButton fx:id="menu" layoutX="738.0" layoutY="22.0" prefHeight="42.0" prefWidth="42.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="22.0">

        <items>
            <MenuItem fx:id="profileItem" onAction="#profile" style="-fx-text-fill: white" styleClass="menu-item-custom" text="Личный кабинет" />
            <MenuItem fx:id="logoutItem" onAction="#logout" style="-fx-text-fill: white" styleClass="menu-item-custom" text="Выйти" />
        </items>
    </MenuButton>


</AnchorPane>
